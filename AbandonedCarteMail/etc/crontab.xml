<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
	<group id="default">
		<job name="magecurious_abandonedcartemail_cron" instance="Magecurious\AbandonedCarteMail\Cron\Abandoned" method="execute">
			<config_path>crontab/default/jobs/magecurious_abandonedcartemail_cron/schedule/cron_expr</config_path>
		</job>
		<job name="magecurious_abandonedcartemail_cron_resetstatus" instance="Magecurious\AbandonedCarteMail\Cron\Resetstatus" method="execute">
			<config_path>crontab/default/jobs/magecurious_abandonedcartemail_cron_resetstatus/schedule/cron_expr</config_path> 
		</job>
	</group>
</config>
