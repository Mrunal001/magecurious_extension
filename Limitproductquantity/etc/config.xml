<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <limitproductquantity>
            <general>
                <enable>0</enable>
                <errmsgqty>You can only buy a minimum of {{qty}} and the maximum of {{qty}}</errmsgqty>
                <errmsgprd>You have to buy {{products}} before proceeding to checkout.</errmsgprd>
            </general>
        </limitproductquantity>
    </default>
</config>
